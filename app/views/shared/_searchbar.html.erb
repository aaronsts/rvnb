<div class="searchbar">
  <%= form_tag listings_path, method: :get do %>
    <%= text_field_tag :name_query,
      params[:name_query],
      class: "form-control",
      placeholder: "Find a ride"
    %>

    <%= text_field_tag :capacity_query,
      params[:capacity_query],
      class: "form-control",
      placeholder: "Find a ride by capacity"
    %>

    <%= text_field_tag :price_query,
      params[:price_query],
      class: "form-control",
      placeholder: "Find a ride by price"
    %>

    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
