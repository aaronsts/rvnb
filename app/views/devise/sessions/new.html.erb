<div class="d-flex justify-content-center align-items-center h-100 form-wrapper ">
  <div class="row w-100 form-height">
    <div class="col-lg-6 col-12 d-flex flex-column justify-content-center align-items-center">
      <h1>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: 'btn btn-dark' %>
        </div>
      <% end %>
      <div class='form-links'>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-lg-6 blue-form d-flex align-items-center justify-content-center">
      <div>
        <h2>JOIN US NOW!</h2>
        <p>Best commuinty of <strong>RV</strong> owners</p>
      </div>
    </div>
  </div>
</div>
