    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner rounded-border">
    <div class="carousel-item active">
      <img class="d-block w-100 carousel-img" src="https://images.unsplash.com/photo-1527786356703-4b100091cd2c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1334&q=80" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 carousel-img" src="https://images.unsplash.com/photo-1496934373448-f606ecd4ad6b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 carousel-img" src="https://i.picsum.photos/id/343/1920/1080.jpg?hmac=ENl4C0Dyd_-O9itbcw3QlisUiGXq5cbE_h5PeCKlbqY" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="split-page">
  <div class="left-column">
    <div class="col-4 p-0">
      <h3><%= @listing.vehicle_name %></h3>
      <h3 class="location"><i class="fas fa-map-marker-alt"></i> <%= @listing.location %> </h3>
    </div>
    <div class="col-8">
      <h3>Fits <i class="fas fa-user-friends"></i> <%= @listing.capacity %> </h3>
      <p><%= @listing.description %></p>

    <div class="booking-view">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">From:</th>
                  <th scope="col">To:</th>
                  <th scope="col">Price</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
              <% @listing.bookings.each do |booking| %>
                <% if current_user == booking.user || current_user == booking.listing.user %>
                  <tr>
                    <td><%= booking.start_date %></td>
                    <td><%= booking.start_date %></td>
                    <td><strong>€<%= booking.total_price %></strong></td>
                    <td><%= link_to "delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'delete' %></td>
                  </tr>
                  </div>

                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
  <div class="right-column">
        <p> From <strong>€<%= @listing.price %></strong> <br>per night <i class="fas fa-moon"></i> </p>
    </ul>
    <div class="booking-form">
      <%= simple_form_for [@listing, @booking] do |f| %>
        <%= f.input :start_date, as: :date, class: 'input-field' %>
        <%= f.input :end_date, as: :date, class: 'input-field' %>
        <%= f.button :submit, class: 'btn-dark' %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", listings_path, class: 'btn-dark' %>
<br>
<% if current_user == @listing.user %>
  <%= link_to "delete", listing_path, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'btn-delete' %>
<% end %>
